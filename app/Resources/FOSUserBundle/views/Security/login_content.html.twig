{% if error %}
    {{ include ('MoustacheBundle::_alert.html.twig', {'type': 'danger', 'messages': [error.messageKey|trans(error.messageData, 'security')]}) }}
{% endif %}

<br />
<section>
    <div class="jumbotron">

    <form action="{{ path("fos_user_security_check") }}" method="post" class="offset-xs-1 col-xs-10">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="form-group row">
            <label for="username">{{ 'Username'|trans }}</label>
            <input type="text" class="form-control form-control-lg" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'Username'|trans }}" />
        </div>
        <div class="form-group row">
            <label for="password">{{ 'Password'|trans }}</label>
            <input type="password" class="form-control form-control-lg" id="password" name="_password" required="required" placeholder="{{ 'Password'|trans }}" />
        </div>

        <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked />
        <label for="remember_me">{{ 'Remember me'|trans }}</label>

        <div class="form-group row">
            <div class="offset-lg-3 col-lg-6">
                <input type="submit" class="btn btn-lg btn-block btn-primary" id="_submit" name="_submit" value="{{ 'Log in'|trans }}" />
            </div>
        </div>
    </form>
    </div>
</section>
