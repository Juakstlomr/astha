<div id="torrent-{{ torrent.id }}" class="card text-xs-center {% if torrent.isStopped %}card-inverse{% endif %}">
    <div class="card-header text-muted">
        <div class="btn-toolbar float-xs-right" role="toolbar" aria-label="Toolbar with button groups">
            {% if torrent.id %}
                <div class="btn-group btn-group-sm" role="group" aria-label="Play">
                  <a href="{{ path('moustache_torrent_start', { id: torrent.id }) }}" type="button" title="{{ 'Start'|trans }}" class="btn btn-secondary{% if not torrent.isStopped %} disabled{% endif %}"><span class="fa fa-share-alt" aria-hidden="true"></span></a>
                  <a href="{{ path('moustache_torrent_stop', { id: torrent.id }) }}" type="button" title="{{ 'Pause'|trans }}" class="btn btn-secondary{% if torrent.isStopped %} disabled{% endif %}"><span class="fa fa-pause" aria-hidden="true"></span></a>
                </div>
            {% endif %}

            {% if torrent.isDone %}
                <div class="btn-group btn-group-sm ml-1" role="group" aria-label="Download group">
                    <button type="button" title="{{ 'Direct download'|trans }}" class="btn btn-secondary disabled"><span class="fa fa-download" aria-hidden="true"></span></button>
                </div>
            {% endif %}
        </div>
    </div>
    <progress id="torrent-progress-{{ torrent.id }}" class="progress {% if torrent.isDone %}progress-success{% else %}progress-info{% endif %}{% if torrent.isDownloading or torrent.isUploading %} progress-animated progress-striped{% endif %}" title="{{ torrent.percentDone|localizednumber }}%" value="{% if torrent.percentDone > 1 %}{{ torrent.percentDone }}{% else %}1{% endif %}" max="100">
        {{ torrent.percentDone }}%
    </progress>
    <div class="h-1">
        {% if torrent.downloadRate is defined %}
            <small id="torrent-down-{{ torrent.id }}" class="mr-1{% if not torrent.downloadRate %} text-muted{% endif %}"><span class="fa fa-arrow-down" aria-hidden="true"></span> <span id="torrent-down-value-{{ torrent.id }}">{{ torrent.getDownloadHumanRate }}</span></small>
        {% endif %}
        {% if torrent.uploadRate is defined %}
            <small id="torrent-up-{{ torrent.id }}"{% if not torrent.downloadRate %} class="text-muted"{% endif %}><span class="fa fa-arrow-up" aria-hidden="true"></span> <span id="torrent-up-value-{{ torrent.id }}">{{ torrent.getUploadHumanRate }}</span></small>
        {% endif %}
    </div>
    <div class="card-block">
        {% if not torrent.isFile %}
        <a class="d-block" href="{{ path('moustache_torrent_content', { id: torrent.id }) }}" title="{% trans with {'%content%': torrent.friendlyName} %}Browse %content%{% endtrans%}" class="card-block">
        {% endif %}
            <p class="card-title">
                <span class="fa fa-5x {{ torrent.mime }}" aria-hidden="true"></span>
            </p>
            <p class="card-text"><small>{{ torrent.friendlyName | truncate(80, false, 'â€¦') }}</small></p>
        {% if not torrent.isFile %}
        </a>
        {% endif %}
    </div>
</div>
